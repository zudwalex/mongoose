CWD = $(realpath $(CURDIR))
ZEPHYR_DIR ?= $(realpath ../../../zephyrproject)

example:
	true

build:
	cp ../../mongoose.c ../../mongoose.h http-server/src/
	cd $(ZEPHYR_DIR) && west build -b nucleo_h743zi -p auto $(CWD)/http-server

flash:
	cd $(ZEPHYR_DIR) && west flash

clean:
	rm -rf */*/mongoose.*
